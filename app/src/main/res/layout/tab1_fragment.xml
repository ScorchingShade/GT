<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_600"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_home"></RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-50dp"
        android:elevation="3dp"
        android:src="@drawable/test" />

    <android.support.v7.widget.CardView
        android:id="@+id/home_detail_card"
        android:layout_width="340dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-30dp"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/md_grey_900">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/setting"
                android:padding="10dp" />

            <TextView
                android:id="@+id/home_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:text="@string/name"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/home_goal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"

                android:background="@color/md_light_blue_A700" />

            <TextView
                android:id="@+id/home_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/progressBar2"
                android:layout_below="@+id/home_name"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:text="Days to goal"
                android:textColor="@color/md_light_blue_A700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_lazy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/progressBar3"
                android:layout_below="@+id/progressBar2"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Lazy days"
                android:textColor="@color/md_light_blue_A700"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/progressBar2"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:background="@color/md_light_blue_A700" />

            <TextView
                android:id="@+id/home_weight_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/progressBar3"
                android:layout_below="@+id/progressBar3"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Loss percent"
                android:textColor="@color/md_light_blue_A700"
                android:textStyle="bold" />
            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/progressBar3"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:background="@color/md_light_blue_A700" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>